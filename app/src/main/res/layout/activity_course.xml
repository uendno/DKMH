<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thangtv.dkmh.activities.CourseActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin về "
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/idCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INT123123"
                        android:textSize="16dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/separator" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:paddingBottom="24dp"
                    android:paddingTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên môn học "
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/nameCourse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OOP" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/separator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiết: "
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/tiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5-7" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sĩ số:  "
                        android:textColor="@color/black"
                        android:layout_marginTop="24dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/siSo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giảng viên:  "
                        android:textColor="@color/black"
                        android:layout_marginTop="24dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/giangVien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trần Việt Thắng" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phòng học "
                        android:layout_marginTop="24dp"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/phongHoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="320E3" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Số tín chỉ "
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/soTinChi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/separator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú: "
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/ghiChu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đây là demo" />

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>


</LinearLayout>
